<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TreeView>
            <TreeViewItem>
                <TreeViewItem.Header>
                    <TextBlock>First Item</TextBlock>                    
                </TreeViewItem.Header>
                <TreeViewItem Header="ChildA"/>
                <TreeViewItem Header="ChildB"/>
                <TreeViewItem Header="ChildC"/>
                <TreeViewItem>
                    <TreeViewItem.Header>
                        <TextBlock>SecondItem</TextBlock>                        
                    </TreeViewItem.Header>
                    <TreeViewItem Header="1A"/>
                    <TreeViewItem Header="1B"/>
                </TreeViewItem>
            </TreeViewItem>
            <TextBlock Text="Another Item"/>
        </TreeView>
    </Grid>
</Window>

<UserControl x:Class="EFSM.Designer.View.PropertyGridView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EFSM.Designer.View"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <xctk:PropertyGrid x:Name="MainPropertyGrid"  
                           GotFocus="PropertyGrid_GotFocus" 
                           LostFocus="PropertyGrid_LostFocus" 
                           PropertyValueChanged="PropertyGrid_PropertyValueChanged" 
                           SelectedObjectChanged="PropertyGrid_SelectedObjectChanged" />
    </Grid>
</UserControl>
